@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model Repository.Models.ProductDto
@{
	ViewData["Title"] = "EditProduct";
	Layout = "~/Areas/SaleStaff/Views/Shared/_LayoutSaleStaff.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@*tạo 1 hàng chưa 1 cột hiển thị giữa trang*@
<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Edit Product</h2>
		<form method="post" enctype="multipart/form-data">


			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">ProductCode</label>
				<div class="col-sm-8">
					<input class="form-control-plaintext" readonly value="@ViewData["ProductCode"]">

				</div>
			</div>


			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">ProductName</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ProductName">
					<span asp-validation-for="ProductName" class="text-danger"></span>@*hiển thị lỗi xác thực màu đỏ*@
				</div>
			</div>
			<div display-flex>
				<div class="row mb-3">
					<div class="offset-sm-4 col-sm-8">
						<img src="~/images/product/@ViewData["ImageUrl1"]" width="150">
					</div>
				</div>
				<div class="row mb-3">
					<div class="offset-sm-4 col-sm-8">
						<img src="~/images/product/@ViewData["ImageUrl2"]" width="150">
					</div>
				</div>
			</div>


			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">ImageUrl1</label>
				<div class="col-sm-8">
					<input type="file" class="form-control" accept="image/*" name="ImageUrl1">
					<span asp-validation-for="ImageUrl1" class="text-danger"></span>@*hiển thị lỗi xác thực màu đỏ*@
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">ImageUrl2</label>
				<div class="col-sm-8">
					<input type="file" class="form-control" accept="image/*" name="ImageUrl2">
					<span asp-validation-for="ImageUrl2" class="text-danger"></span>@*hiển thị lỗi xác thực màu đỏ*@
				</div>
			</div>


			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">GemID</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="GemID">
					<span asp-validation-for="GemID" class="text-danger"></span>@*hiển thị lỗi xác thực màu đỏ*@
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Weight</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Weight">
					<span asp-validation-for="Weight" class="text-danger"></span>@*hiển thị lỗi xác thực màu đỏ*@
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">ProductionCost</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ProductionCost">
					<span asp-validation-for="ProductionCost" class="text-danger"></span>@*hiển thị lỗi xác thực màu đỏ*@
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">PriceRate</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="PriceRateID">
					<span asp-validation-for="PriceRateID" class="text-danger"></span>@*hiển thị lỗi xác thực màu đỏ*@
				</div>
			</div>

			<div class="row">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-action="ProductList" role="button">Cancel</a>
				</div>
			</div>
		</form>
	</div>
</div>


