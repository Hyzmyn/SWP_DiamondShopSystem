@model IEnumerable<Repository.Models.Product>

@{
    ViewData["Title"] = "CreateGem";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutManager.cshtml";
}
@using Repository.Models


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Product List</h1>

<p>
    <a asp-action="CreateProduct" class="btn btn-primary">Create New</a>
</p>
<p>@TempData["Message"]</p>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
<table class="table">
    <thead>
        <tr class="table-warning">
            <th>
                @Html.DisplayNameFor(model => model.ProductCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gems.GemCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductionCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceRateID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th>
            <th> Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-success">
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    <img src="~/images/product/@item.ImageUrl1" width="1000" alt="Image 1" />
                </td>
                <td>
                    <img src="~/images/product/@item.ImageUrl2" width="1000" alt="Image 1" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gems.GemCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceRateID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCost)
                </td>
                <td>
                    <a asp-action="EditProduct" asp-route-productCode="@item.ProductCode">Edit</a>
                    <a asp-action="DeleteProduct" asp-route-productCode="@item.ProductCode" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
