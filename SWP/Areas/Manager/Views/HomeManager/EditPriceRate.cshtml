@model Repository.Models.PriceRateList
@{      
    Layout = "~/Areas/Manager/Views/Shared/_LayoutManager.cshtml";
    ViewData["Title"] = "Edit PriceRate";
}
<h1>Edit Price Rate</h1>
<div class="row">
    <div class="col-md-6">
        <h4>Current Information</h4>
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PriceRateID)</dt>
            <dd class="col-sm-8">@Model.PriceRateID</dd>
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PriceRate)</dt>
            <dd class="col-sm-8">@Model.PriceRate</dd>
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EffDate)</dt>
            <dd class="col-sm-8">@Model.EffDate.ToString("yyyy-MM-dd")</dd>
        </dl>
    </div>
    <div class="col-md-6">
        <h4>Edit Information</h4>
        <form asp-action="Edit">
            <input type="hidden" asp-for="PriceRateID" />
            <input type="hidden" asp-for="EffDate" />
            <div class="form-group">
                <label asp-for="PriceRate" class="control-label"></label>
                <input asp-for="PriceRate" class="form-control" />
                <span asp-validation-for="PriceRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

