@model Repository.Models.DiscountDto


@{
    ViewData["Title"] = "CreateGem";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutManager.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Edit Discount</h2>

<form asp-action="EditDiscount" method="post">
    <input type="hidden" asp-for="DiscountID" />

    <div class="form-group">
        <label asp-for="OrderID">Order ID</label>
        <input asp-for="OrderID" class="form-control" disabled />
        <span asp-validation-for="OrderID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiscountCode">Discount Code</label>
        <input asp-for="DiscountCode" class="form-control" />
        <span asp-validation-for="DiscountCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiscountAmount">Discount Amount</label>
        <input asp-for="DiscountAmount" class="form-control" />
        <span asp-validation-for="DiscountAmount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiscountDate">Discount Date</label>
        <input asp-for="DiscountDate" type="date" class="form-control" />
        <span asp-validation-for="DiscountDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiscountStatus">Discount Status</label>
        <select asp-for="DiscountStatus" class="form-control">
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>
        <span asp-validation-for="DiscountStatus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="DiscountList" class="btn btn-outline-primary">Cancel</a>
</form>
