@model IEnumerable<Repository.Models.Order>

@{
    ViewData["Title"] = "CreateGem";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutManager.cshtml";
}


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Order List</h1>

<p>
    <a asp-action="CreateOrder">Create New</a>
</p>
<p>@TempData["Message"]</p>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
<table class="table">
    <thead>
        <tr class="table-warning">
            <th>
                @Html.DisplayNameFor(model => model.OrderID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus)
            </th>
            <th> Action</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-success">
                <td>
                    @Html.DisplayFor(modelItem => item.OrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderStatus)
                </td>
                <td>
                    <a asp-action="EditOrder" asp-route-orderId="@item.OrderID">Edit</a>
                    <a asp-action="DeleteOrder" asp-route-orderId="@item.OrderID" onclick="return confirm('Are you sure you want to delete this order?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
