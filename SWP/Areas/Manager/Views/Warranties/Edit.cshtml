@model Repository.Models.Warranty

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutManager.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Edit</h1>

<h4>Warranty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit" asp-route-id="@Model.WarrantyID">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WarrantyID" />
            <div class="form-group">
                
                <input type="hidden" asp-for="OrderID" class="form-control" asp-items="ViewBag.OrderID" />
                <span asp-validation-for="OrderID" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID"/>
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input type="hidden" asp-for="BuyDate" class="form-control" />
                <span asp-validation-for="BuyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instance" class="control-label"></label>
                <input asp-for="Instance" class="form-control" />
                <span asp-validation-for="Instance" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WarrantyStatus" /> @Html.DisplayNameFor(model => model.WarrantyStatus)
                </label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


