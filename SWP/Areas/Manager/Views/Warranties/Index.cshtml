@model IEnumerable<Repository.Models.Warranty>

@{
    ViewData["Title"] = "Warranty Manage";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutManager.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Warranty</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Order.User.Username)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Product.ProductName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.BuyDate)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Instance)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order.User.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductName)
                    </td>
                    <td>
                        @item.BuyDate.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                       @item.EndDate.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Instance)
                    </td>
                    <td>
                       @*  <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.WarrantyID">Edit</a> *@
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.WarrantyID">Details</a>
                        @* <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.WarrantyID">Delete</a> *@
                        <a class="btn btn-danger" asp-action="GenerateWarrantyPdf" asp-route-id="@item.WarrantyID">Download</a>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
