@model Repository.Models.Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Delivery/Views/Shared/_LayoutDelivery.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderID" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OrderStatus" /> @Html.DisplayNameFor(model => model.OrderStatus)
                </label>
            </div>
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-action="index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

