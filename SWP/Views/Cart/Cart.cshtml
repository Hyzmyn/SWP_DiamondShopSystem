@model IEnumerable<Repository.Models.OrderDetail>
@using Repository.Models

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal totalPrice = 0;
}
<main role="main" style="padding: 0px 100px;">

<style>
    .flex-container {
        display: flex;
        align-items: center;
        margin-top: -20px;
    }
    .flex-item {
        margin-right: 10px;
    }
    .btn-pay-now {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
</style>

<table class="table" style="color: wheat; margin: 0px 10px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>IMAGE</th>
            <th>NISIZE</th>
            <th>Quantity</th>
            <th>PRICE</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
                var image = item.Product.ImageUrl1;
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Product.ProductID)</td>
                    <td>@Html.DisplayFor(modelItem => item.Product.ProductName)</td>
                        <td><img src="@Url.Content("~/images/product/" + image)" style="height: 75px;" /></td>
                    <td>@Html.DisplayFor(modelItem => item.NiSize)</td>
                    <td>
                        <div class="flex-container">
                            <form asp-action="UpdateQuantity" method="post" style="display: flex; align-items: center;">
                                <input type="hidden" name="orderDetailId" value="@item.OrderDetailID" />
                                <input type="number" name="quantity" value="@item.Quantity" min="1" class="flex-item" style="width: 50px;" />
                                <button type="submit" class="btn btn-primary btn-sm flex-item"><i class="bi bi-check-square-fill"></i></button>
                            </form>
                        </div>
                    </td>
                    <td>
                        @{
                            var itemTotalPrice = item.Product.TotalPrice * item.Quantity;
                            totalPrice += itemTotalPrice;
                        }
                        @itemTotalPrice
                    </td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post" style="display: inline;">
                            <input type="hidden" name="orderDetailId" value="@item.OrderDetailID" />
                            <button type="submit" class="btn btn-danger btn-sm flex-item"><i class="bi bi-trash3"></i></button>
                        </form>
                    </td>
                </tr>
            }
        <tr>
            <td colspan="5" style="text-align: right; font-weight: bold;">TOTAL PRICE</td>
            <td colspan="3" style="font-weight: bold;">@totalPrice</td>
        </tr>
        <tr>
            <td colspan="7" style="text-align: right;">
                <form asp-action="Checkout" method="post" style="display: inline;">
                    <button type="submit" class="btn-pay-now">PAY PURCHASE</button>
                </form>
            </td>
        </tr>
    </tbody>
</table>

</main>
