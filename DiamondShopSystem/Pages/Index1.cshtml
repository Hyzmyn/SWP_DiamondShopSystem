@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="blur-bg-overlay"></div>
<div class="form-popup">
    <span class="close-btn material-symbols-rounded">x</span>
    <div class="form-box login">
        <div class="form-details">

            <h2>Welcome Back</h2>
            <p>Please login using your personal information to stay connected with us</p>
        </div>
        <div class="form-content">
            <h2>LOGIN</h2>
            <form method="post" asp-page-handler="Login">
                <div class="input-field">
                    <input type="text" asp-for="UserName" required>
                    <label>Username</label>
                </div>
                <div class="input-field">
                    <input type="password" asp-for="Password" required>
                    <label>Password</label>
                </div>
                <a href="#" class="forgot-pass">Forgot Password?</a>
                <p>@Model.Message</p>
                <button type="submit" value="Log In">Log In</button>
            </form>
            <div class="bottom-link">
                Don't have an account?
                <a href="#" id="signup-link">Signup</a>
            </div>
        </div>
    </div>
    <div class="form-box signup">
        <div class="form-details">

            <h2>Create Account</h2>
            <p>To become a part of our community, please sign up using your personal information </p>
        </div>
        <div class="form-content">
            <h2>SIGNUP</h2>
            <form method="post" asp-page-handler="Register">
                <div class="input-field">
                    <input type="text" asp-for="UserName" required>
                    <label>Enter your username</label>
                </div>
                <div class="input-field">
                    <input type="text" asp-for="Email" required>
                    <label>Enter your email</label>
                </div>
                <div class="input-field">
                    <input type="password" asp-for="Password" required>
                    <label>Create password</label>
                </div>
                <div class="policy-text">
                    <input type="checkbox" id="policy">
                    <label for="policy">
                        I agree the
                        <a href="#">Terms & Conditions</a>
                    </label>
                </div>
                <p>@Model.Message</p>
                <button type="submit" value="Sign Up" >Sign Up</button>
            </form>
            <div class="bottom-link">
                Already have an account?
                <a href="#" id="login-link">Login</a>
            </div>
        </div>
    </div>
</div>
<div class="single_slider">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12">
                <div class="slider_content">
                    <p>exclusive offer -20% off this week</p>
                    <h1>Necklace</h1>
                    <span>22 Carat gold necklace for wedding</span>
                    <p class="slider_price">starting at <span>29.999.999VNĐ</span></p>
                    <a href="#" class="button">Shop Now</a>
                </div>
            </div>
        </div>
    </div>
</div>
